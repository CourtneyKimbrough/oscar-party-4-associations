<h1>Edit Director #<%= @the_director.id %></h1>

<p>
  <a href="/directors/<%= @the_director.id %>" target="_blank">View Director Details</a>
</p>

<hr>

<form action="/backdoor/modify_director/<%= @the_director.id %>" method="post">
  <div>
    <label for="first_name">Director First Name</label>
    <input type="text" id="first_name" name="query_first_name" value="<%= @the_director.first_name %>" required>
  </div>

  <div>
    <label for="last_name">Director Last Name</label>
    <input type="text" id="last_name" name="query_last_name" value="<%= @the_director.last_name %>" required>
  </div>

  <div>
    <label for="dob">Date of Birth</label>
    <input type="date" id="dob" name="query_dob" value="<%= @the_director.dob %>">
  </div>

  <div>
    <label for="bio">Bio</label>
    <textarea id="bio" name="query_bio" rows="5"><%= @the_director.bio %></textarea>
  </div>

  <div>
    <label for="image">Image URL</label>
    <input type="text" id="image" name="query_image" value="<%= @the_director.image %>">
  </div>

  <button type="submit">Update Director</button>
</form>
