<article>
  <header>
    <h1>Actors</h1>
  </header>

  <div class="overflow-auto">
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_actors.each do |actor| %>
          <tr>
            <td>
              <%= actor.first_name %>
            </td>
            <td>
              <%= actor.last_name %>
            </td>
            <td>
              <a href="/backdoor/actors/<%= actor.id %>">Edit</a> |
              <a href="/backdoor/delete_actor/<%= actor.id %>">Delete</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</article>
