<article>
  <header>
    <h1>Directors</h1>
  </header>

  <div class="overflow-auto">
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_directors.each do |director| %>
          <tr>
            <td>
              <%= director.first_name %>
            </td>
            <td>
              <%= director.last_name %>
            </td>
            <td>
              <a href="/backdoor/directors/<%= director.id %>">Edit</a> |
              <a href="/backdoor/delete_director/<%= director.id %>">Delete</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
