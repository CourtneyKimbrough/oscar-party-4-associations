<article>
  <header>
    <h1>Movies</h1>
  </header>

  <div class="overflow-auto">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Year</th>
          <th>Result</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_movies.each do |movie| %>
          <tr>
            <td>
              <%= movie.title %>
            </td>
            <td>
              <%= movie.year %>
            </td>
            <td>
              <%= movie.result %>
            </td>
            <td>
              <a href="/backdoor/movies/<%= movie.id %>">Edit</a> |
              <a href="/backdoor/delete_movie/<%= movie.id %>">Delete</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</article>
